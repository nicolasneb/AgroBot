# ─── PostgreSQL ───
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=agrobot
POSTGRES_PORT=5432

# ─── Application ───
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:${POSTGRES_PORT}/${POSTGRES_DB}
TEST_DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:${POSTGRES_PORT}/${POSTGRES_DB}_test
ALEMBIC_DATABASE_URL=postgresql+psycopg2://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:${POSTGRES_PORT}/${POSTGRES_DB}

# ─── Background Job ───
EVALUATION_INTERVAL_SECONDS=60